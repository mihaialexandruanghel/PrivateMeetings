<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="496.0" prefWidth="386.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <Pane layoutY="8.0" prefHeight="487.0" prefWidth="386.0" AnchorPane.bottomAnchor="1.0" AnchorPane.topAnchor="8.0">
            <children>
                <TextField fx:id="txtUsername" layoutX="43.0" layoutY="52.0" prefHeight="34.0" prefWidth="275.0" promptText="username or email" />
                <PasswordField fx:id="txtPassword" layoutX="43.0" layoutY="118.0" prefHeight="34.0" prefWidth="275.0" promptText="password" stylesheets="@../styling/fullpackstyling.css" />
                <Button fx:id="btnSignin" layoutX="204.0" layoutY="205.0" mnemonicParsing="false" onMouseClicked="#handleButtonAction" prefHeight="34.0" prefWidth="137.0" stylesheets="@../styling/fullpackstyling.css" text="Sign in" />
                <Label fx:id="btnForgot" alignment="CENTER" layoutX="53.0" layoutY="210.0" prefHeight="23.0" prefWidth="93.0" text="Forgot Password" textFill="#5383ff">
                    <font>
                        <Font name="Segoe UI" size="12.0" />
                    </font>
                </Label>
                <Button fx:id="btnSignup" layoutX="43.0" layoutY="296.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="275.0" onMouseClicked="#registerButton" stylesheets="@../styling/fullpackstyling.css" text="Sign up" />
                <Label fx:id="lblErrors" alignment="CENTER" layoutX="8.0" layoutY="95.0" prefHeight="23.0" prefWidth="275.0" textFill="#ff6354">
                    <font>
                        <Font name="Segoe UI" size="10.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>
